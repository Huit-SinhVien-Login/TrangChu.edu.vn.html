<script>
    var keyTinTucNew = "TinTucNew";
    setRemoveIconNew();
    $('body').on('click', '.tab-content .item-notifi .desc-notifi > a.title-notifi,.view-more .view', function () {
        var idTinTuc = $(this).attr('data-post-id');
        if (idTinTuc == null) {
            idTinTuc = $(this).parent().prev().prev().attr('data-post-id');
        }
        var data = JSON.parse(localStorage.getItem(keyTinTucNew));
        if (!data) {
            data = { idTin: [idTinTuc] };
            localStorage.setItem(keyTinTucNew, JSON.stringify(data));
        } else {
            if (data.idTin.indexOf(idTinTuc) === -1) {
                data.idTin.push(idTinTuc);
                localStorage.setItem(keyTinTucNew, JSON.stringify(data));
            }
        }
        setRemoveIconNew();
    });
    function setRemoveIconNew() {
        var data = JSON.parse(localStorage.getItem(keyTinTucNew));
        if (data && data.idTin) {
            data.idTin.forEach(function (id) {
                $('body').find('.tab-content .item-notifi .desc-notifi a[data-post-id="' + id + '"]').removeClass('news_new');
            });
        }
    }
</script>
